
<div class="row">
<div class="col s8">
  <h4>New price for <%= @pay_grade.level %></h4>
  <%= simple_form_for(@pay_grade_rate) do |f| %>
    <%= f.error_notification %>
    <div class="row">
     
    <div class="form-inputs">
        <%= f.input :pay_grade_id, as: :hidden, input_html: { value: @pay_grade.id } %>
          <%= f.input :rate %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
        </div>
     
    </div>
    <div class="row">
      <div class="form-actions col s8">
        <%= f.button :submit %>
      </div>
    </div>
  <% end %>
</div>
</div>

<%= link_to 'Back', :back %>