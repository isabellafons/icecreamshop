                                                            object: @employee,
                                                            primary: 'employee_data', 
                                                            secondary: 'secondary_information',
                                                            sidebar: 'assignment_history'} %>
<% elsif current_user.role?(:manager) %>
    <%= render partial: 'partials/show_structure_edit_only', locals: {model_name: 'employee', 
    object: @employee,
    primary: 'employee_data', 
    secondary: 'secondary_information',
    sidebar: nil} %>

<% else %>

        <%= render partial: 'partials/show_structure_edit_only', locals: {model_name: 'employee', 
        object: @employee,
        primary: 'employee_data', 
        secondary: 'secondary_information',
        sidebar: nil} %>
                                               
<% end %>