<div class="card">
  <div class="card-content">
    <h5>Jobs Worked</h5>

    <% if @jobs.empty? %>
      <p>There are no recorded jobs at this time.</p>
    <% else %>

      <table class="striped highlight">
        <% @jobs.each do |sj| %>
          <tr >
            <td><%=  link_to sj.name , job_path(sj)%></td>
            <% if current_user.role?(:admin) || current_user.role?(:manager) %>
                <td> <%= link_to(shift_job_path(shift_id: @shift.id), method: :delete, data: { confirm: 'Are you sure you wish to delete this job from the shift?' }) do %>
                    <i class="material-icons">delete</i>
                <% end %>&nbsp;&nbsp</td>
            <% end %>
          
          </tr>
        <% end %>
    
       
      </table>
     
      <p class="supertiny"></p>
      <br />
    <% end %>
    <div class="waves-effect waves-light btn">
    <%= link_to "Add a new job", new_shift_job_path(shift_id: @shift.id) %>
    </div>
  </div>
</div>