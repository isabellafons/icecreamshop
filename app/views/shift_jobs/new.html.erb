
<div class="row">
<div class="col s8">
  <h4>New job for on <%= @shift.date %></h4>
  <%= simple_form_for(@shift_job) do |f| %>
    <%= f.error_notification %>
    <div class="row">
     
    <div class="form-inputs">
          <%= f.input :shift_id, as: :hidden, input_html: { value: @shift.id } %>
          <%= f.input :job_id, collection: Job.active.alphabetical%>
        </div>
     
    </div>
    <div class="row">
      <div class="form-actions col s8">
        <%= f.button :submit %>
      </div>
    </div>
  <% end %>
</div>
</div>

